        <Grid
            Grid.Row="1"
            Grid.Column="2"
            Visibility="{Binding SelectedEpisodeVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
